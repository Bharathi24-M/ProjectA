@model TransportWeb.Models.VehicleInfo

@{
    ViewData["Title"] = "DeleteVehicleDetails";
}
<div class="row justify-content-between">
    <div class="col-4">
        <h4 class="text-success">Delete Vehicle Details</h4>
    </div>
    <div class="col-2">
        <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
    </div>
</div>

<div>
    <hr />
    <div class="row">
        <div class="col-sm-4">
            <dl class="row">
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.VehicleNum)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.VehicleNum)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.Capacity)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.Capacity)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.AvailableSeats)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.AvailableSeats)
                </dd>
                <dt class="col-sm-6">
                    @Html.DisplayNameFor(model => model.IsOperable)
                </dt>
                <dd class="col-sm-6">
                    @Html.DisplayFor(model => model.IsOperable)
                </dd>
            </dl>
            @if (ViewBag.DeleteVehicleStatus == null)
            {
                <form asp-action="DeleteVehicleDetails">
                    <h5>Are you sure you want to delete this?</h5>
                    <input type="submit" value="Delete" class="btn btn-danger" />

                </form>
            }
        </div>
        <div class="col-md-8">
            @if (ViewBag.DeleteVehicleStatus != null)
            {
                @if (ViewBag.DeleteVehicleStatus == "Vehicle details deleted successfully")
                {
                    <div class="Alert_card">
                        <div class="Alert_icon">
                            <i class="fa fa-check text-success" aria-hidden="true"></i>
                        </div>
                        <h1 class="Alert_header">Success</h1>
                        <p class="Alert_msg"> @ViewBag.DeleteVehicleStatus</p>
                        <div>
                            <a class="btn btn-success btn-sm mt-3" asp-action="Index">Back to List</a>
                        </div>
                    </div>
                }
                else
                {
                    <div class="Alert_card">
                        <div class="Alert_icon">
                            <i class="fa fa-times text-danger" aria-hidden="true"></i>
                        </div>
                        <h1 class="Alert_header text-danger">Oops...Sorry</h1>
                        <p class="Alert_msg"> @ViewBag.DeleteVehicleStatus</p>
                        <div>
                            <a class="btn btn-danger btn-sm mt-3" asp-action="Index">Back to List</a>
                        </div>
                    </div>
                }
            }

        </div>
    </div>


</div>
