@model TransportWeb.Models.RouteInfo

@{
    ViewData["Title"] = "DeleteRouteDetails";
}
<div class="row justify-content-between">
    <div class="col-4">
        <h4 class="text-success">Delete Route Details</h4>
    </div>
    <div class="col-2">
        <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
    </div>
</div>


<hr />
<div class="row">
    <div class="col-md-4">
        <dl class="row">
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.RouteNum)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.RouteNum)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.RouteName)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.RouteName)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.VehicleNum)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.VehicleNum)
            </dd>
        </dl>
        @if (ViewBag.DeleteRouteStatus == null)
        {
            <form asp-action="DeleteRouteDetails">
                <h5>Are you sure you want to delete this?</h5>
                <input type="submit" value="Delete" class="btn btn-danger" />
            </form>
        }
    </div>
    <div class="col-md-8">
        @if (ViewBag.DeleteRouteStatus != null)
        {
            @if (ViewBag.DeleteRouteStatus == "Route details deleted successfully")
            {
                <div class="Alert_card">
                    <div class="Alert_icon">
                        <i class="fa fa-check text-success" aria-hidden="true"></i>
                    </div>
                    <h1 class="Alert_header">Success</h1>
                    <p class="Alert_msg"> @ViewBag.DeleteRouteStatus</p>
                    <div>
                        <a class="btn btn-success btn-sm mt-3" asp-action="Index">Back to List</a>
                    </div>
                </div>
            }
            else
            {
                <div class="Alert_card">
                    <div class="Alert_icon">
                        <i class="fa fa-times text-danger" aria-hidden="true"></i>
                    </div>
                    <h1 class="Alert_header text-danger">Oops...Sorry</h1>
                    <p class="Alert_msg"> @ViewBag.DeleteRouteStatus</p>
                    <div>
                        <a class="btn btn-danger btn-sm mt-3" asp-action="Index">Back to List</a>
                    </div>
                </div>
            }
        }

    </div>
</div>