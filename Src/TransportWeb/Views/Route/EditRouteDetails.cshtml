@model TransportWeb.Models.RouteInfo

@{
    ViewData["Title"] = "Edit Route Details";
}
<div class="row justify-content-between">
    <div class="col-4">
        <h4 class="text-success">Edit Route Details</h4>
    </div>
    <div class="col-2">
        <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRouteDetails">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group" hidden>
                <label asp-for="RouteNum" class="control-label"></label>
                <input asp-for="RouteNum" class="form-control" />
                <span asp-validation-for="RouteNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RouteName" class="control-label"></label>
                <input asp-for="RouteName" class="form-control" />
                <span asp-validation-for="RouteName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Vehicle Number</label>
                <select asp-for="VehicleNum" id="VehicleNum" class="form-control" asp-items="@Model.VehicleList">
                    <option value="">Select Vehicle Number</option>
                </select>
                <span asp-validation-for="VehicleNum" class="text-danger"> </span>
            </div>
            @if (ViewBag.EditRouteStatus == null)
            {
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-success" />
            </div>
            }
        </form>
    </div>
    <div class="col-md-8">
        @if (ViewBag.EditRouteStatus != null)
        {
            @if (ViewBag.EditRouteStatus == "Updated the Route details successfully..")
            {
                <div class="Alert_card">
                    <div class="Alert_icon">
                        <i class="fa fa-check text-success" aria-hidden="true"></i>
                    </div>
                    <h1 class="Alert_header">Success</h1>
                    <p class="Alert_msg"> @ViewBag.EditRouteStatus</p>
                    <div>
                        <a class="btn btn-success btn-sm mt-3" asp-action="Index">Back to List</a>
                    </div>
                </div>
            }
            else
            {
                <div class="Alert_card">
                    <div class="Alert_icon">
                        <i class="fa fa-times text-danger" aria-hidden="true"></i>
                    </div>
                    <h1 class="Alert_header text-danger">Oops...Sorry</h1>
                    <p class="Alert_msg"> @ViewBag.EditRouteStatus</p>
                    <div>
                        <a class="btn btn-danger btn-sm mt-3" asp-action="Index">Back to List</a>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
