@model TransportWeb.Models.EmployeeInfo

@{
    ViewData["Title"] = "EditEmployeeDetails";
}
<div class="row justify-content-between">
    <div class="col-4">
        <h4 class="text-success">Edit Employee Details</h4>
    </div>
    <div class="col-2">
        <a class="btn btn-outline-dark" asp-action="Index">Back to List</a>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditEmployeeDetails">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden>
                <label asp-for="EmployeeId" class="control-label"></label>
                <input asp-for="EmployeeId" class="form-control" />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Route Name</label>
                <select asp-for="RouteNum" class="form-control" onchange="setStop()">
                    <option value="">Select Route</option>
                    @foreach (var item in @Model.RouteList)
                    {
                        <option data-vehiclenum="@item.VehicleNum" value="@item.RouteNum">@item.RouteName</option>
                    }
                </select>
                <span asp-validation-for="VehicleNum" class="text-danger"> </span>
            </div>
            <div class="form-group">
                <label class="control-label"> Stop Name</label>
                <select asp-for="StopId" class="form-control">
                    <option value="">Select Stop</option>
                    @foreach (var item in @Model.StopList)
                    {
                        <option data-routeid="@item.RouteNum" value="@item.StopId">@item.StopName</option>
                    }
                </select>
                <span asp-validation-for="StopId" class="text-danger"> </span>
            </div>
            <div class="form-group">
                <label class="control-label"> Vehicle Number</label>
                <select asp-for="VehicleNum" class="form-control">
                    <option value="">Select Transport</option>
                    @foreach (var item in @Model.VehicleList)
                    {
                        <option value="@item.VehicleNum">@item.VehicleNum</option>
                    }
                </select>
                <span asp-validation-for="VehicleNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                @if (ViewBag.EditEmployeeStatus == null)
                {
                    <input type="submit" value="Update" class="btn btn-success" />
                }
            </div>

        </form>
    </div>
    <div class="col-md-8">
        @if (ViewBag.EditEmployeeStatus != null)
        {
            @if (ViewBag.EditEmployeeStatus == "Employee details updated successfully")
            {
                <div class="Alert_card">
                    <div class="Alert_icon">
                        <i class="fa fa-check text-success" aria-hidden="true"></i>
                    </div>
                    <h1 class="Alert_header">Success</h1>
                    <p class="Alert_msg"> @ViewBag.EditEmployeeStatus</p>
                    <div>
                        <a class="btn btn-success btn-sm mt-3" asp-action="Index">Back to List</a>
                    </div>
                </div>
            }
            else
            {
                <div class="Alert_card">
                    <div class="Alert_icon">
                        <i class="fa fa-times text-danger" aria-hidden="true"></i>
                    </div>
                    <h1 class="Alert_header text-danger">Oops...Sorry</h1>
                    <p class="Alert_msg"> @ViewBag.EditEmployeeStatus</p>
                    <div>
                        <a class="btn btn-danger btn-sm mt-3" asp-action="Index">Back to List</a>
                    </div>
                </div>
            }
        }

    </div>
</div>

<script type="text/javascript">
    window.addEventListener("load", function () {
        setStop();
    }, false);
    function setStop() {
      
        var RouteNum = document.getElementById("RouteNum");
        var StopId = document.getElementById("StopId");

        for (i = 1; i < StopId.options.length; i++) {
            if (StopId.options[i].getAttribute("data-routeid") == RouteNum.value) {
                StopId.options[i].removeAttribute("hidden");
            } else {
                StopId.options[i].setAttribute("hidden", "hidden");
            }
        }

        var selectedIndex = RouteNum.selectedIndex;
        var VehicleNum = RouteNum.options[selectedIndex].getAttribute("data-vehiclenum");

        var Vehicle = document.getElementById("VehicleNum");
        for (i = 1; i < Vehicle.options.length; i++) {
            if (Vehicle.options[i].value == VehicleNum) {
                Vehicle.options[i].removeAttribute("hidden");
            } else {
                Vehicle.options[i].setAttribute("hidden", "hidden");
            }
        }

    }
</script>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
